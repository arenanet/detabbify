{
  "name": "detabbify",
  "version": "0.1.1",
  "description": "Browserify transform to strip tabs from bundles",
  "main": "index.js",
  "repository": "arenanet/detabbify",
  "bugs": {
    "url": "https://github.com/arenanet/detabbify/issues"
  },
  "scripts": {
    "test": "npm run lint && npm run tape",
    "tape": "tape test/*.js | tap-difflet",
    "lint": "eslint . && jscs .",
    "preversion": "npm test",
    "prepublish": "npm test"
  },
  "keywords": [
    "browserify",
    "browserify-transform",
    "tabs",
    "spaces"
  ],
  "author": "Pat Cavit <npm@patcavit.com>",
  "license": "MIT",
  "dependencies": {
    "through2": "^2.0.0"
  },
  "devDependencies": {
    "browserify": "^14.0.0",
    "concat-stream": "^1.5.1",
    "eslint": "^3.15.0",
    "eslint-config-arenanet": "^3.2.0",
    "from2-string": "^1.1.0",
    "jscs": "^3.0.7",
    "jscs-preset-arenanet": "^1.0.3",
    "tap-difflet": "^0.7.0",
    "tape": "^4.4.0",
    "tape-catch": "^1.0.4"
  },
  "eslintConfig": {
    "extends": "arenanet",
    "env": {
      "node": true
    }
  }
}
